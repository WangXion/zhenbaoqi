.lv {
    width: 100%;
    height: 100%;
    padding-bottom: 100rpx;
}

.lv_top {
    width: 100%;
    height: 350rpx;
    position: relative;
}

.top_bg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.top_num {
    position: absolute;
    top: 140rpx;
    left: 180rpx;
    color: rgba(254, 221, 167, 1);
    font-size: 26rpx;
}

.top_ava {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: rgba(228, 228, 228, 1);
    position: absolute;
    top: 90rpx;
    left: 60rpx;
}

.user_info {
    width: 260rpx;
    height: 100rpx;
    position: absolute;
    top: 90rpx;
    left: 180rpx;
    color: rgba(254, 221, 167, 1);

}

.lv_style {
    width: 100rpx;
    height: 40rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
    float: left;
}

.lv_center {
    width: 100%;
    height: 400rpx;
    position: relative;

}

.lv_center_icon {
    position: absolute;
    width: 94%;
    top: -100rpx;
    left: 3%;
    padding-bottom: 40rpx;
    background-color: white;
    border-radius: 10rpx 10rpx 0 0;
    box-shadow: rgb(212, 210, 210) 0px 0px 10px;
    -webkit-box-shadow: rgb(212, 210, 210) 0px 0px 10px;
    -moz-box-shadow: rgb(212, 210, 210) 0px 0px 10px;

}

.authority_list {
    margin-top: 60rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 22rpx;
    text-align: center;
    color: rgb(145, 145, 145);

}

.grade {
    width: 100%;
    margin-top: 100rpx;
}

.table {
    width: 90%;
    height: 680rpx;
    margin: auto;
    margin-top: 50rpx;
    border: 1px solid rgba(194, 194, 194, 1);
    display: flex;
    align-items: flex-start;
    justify-content: space-around;
    background-color: white;

}

.table_top {
    width: 100%;
    height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    line-height: 80rpx;
    font-weight: bold;
    background-color: rgb(250, 247, 250);
    color: rgba(51, 51, 51, 1);

}

.table_list {
    width: 100%;
    height: 60rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis; 
    white-space:nowrap;
    color: rgba(51, 51, 51, 1);
    border-bottom: 1px solid rgb(250, 247, 250);
}

.lv_bottom {
    width: 94%;
    margin: auto;
    margin-top: 100rpx;
}

.top {
    width: 96%;
    height: 40rpx;
    margin: auto;
    text-align: center;
    line-height: 40rpx;
    font-size: 35rpx;
    color: rgba(151, 117, 61, 1);
    font-weight: bold;
    margin-top: 40rpx;
}

.grade_txt {
    width: 96%;
    margin: auto;
    margin-top: 50rpx;
    font-size: 24rpx;
    color: rgba(136, 136, 136, 1);
}