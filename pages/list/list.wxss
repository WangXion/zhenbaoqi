.search_hd {
    width: 100%;
    height: 100rpx;
    background-color: white;
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
}

.search_hd_left {
    width: 96%;
    height: 70rpx;
    display: flex;
    align-items: center;
    justify-content: start;
    font-size: 26rpx;
    background-color: rgba(245, 245, 245, 1);
    border-radius: 35rpx;
}

.search_input {
    flex: 1;
    height: 100%;
    margin-left: 10rpx;
}

.hd_left {
    width: 10%;
    height: 100rpx;
    font-size: 22rpx;
    text-align: center;
    padding-top: 20rpx;
}

.question-mark {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 45rpx;
    top: 30rpx;
}

.tui-fixed-left {
    width: 180rpx;
    height: 100%;
    position: fixed;
    left: 0;
    top: 100rpx;
}

.tui-list-head {
    height: 65rpx;
    line-height: 65rpx;
}

.tui-city-scroll {
    width: 100%;
}

.menu-item {
    font-size: 26rpx;
    box-sizing: border-box;
    height: 100rpx;
    width: 180rpx;
    background-color: white;
    display: block;
    position: relative;
    z-index: 10;
    text-align: center;
}

.menu-active {
    background-color: rgba(246, 246, 246, 1);
    color: red;
    font-weight: bold;
    font-size: 27rpx;
    border-left: 6rpx solid red;
    line-height: 34rpx;
}

.content {
    width: 570rpx;
    box-sizing: border-box;
    padding-left: 5rpx;
    height: 100%;
    position: fixed;
    right: 0;
    top: 100rpx;
}

.advertising {
    width: 96%;
    height: 120rpx;
    margin: auto;
    margin-bottom: 40rpx;
    margin-top: 20rpx;
}

.tui-city-scroll-y {
    height: 100%;
    box-sizing: border-box;
}

.tui-list-head {
    height: 65rpx;
    line-height: 65rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: 700;
    color: rgba(225, 225, 225, 1);
}

.tui-list-li {
    background-color: rgb(255, 255, 255);
    /* height: 400px; */
    overflow: hidden;
    color: rgb(255, 255, 255);
    font-size: 50rpx;
    box-sizing: border-box;
    padding: 20rpx 0 0 0;
}

.goods-box {
    width: 170rpx;
    /* height: 100rpx;
background: #c00; */
    overflow: hidden;
    margin-right: 10rpx;
    /* margin-bottom: 10rpx; */
    float: left;
}

.tui-list-li .goods-box:nth-child(3n) {
    margin-right: 0rpx;
}

.goodsImg {
    display: block;
    width: 100rpx;
    height: 100rpx;
    margin: 0 auto;
    margin-bottom: 15rpx;
}

.goodsName {
    width: 100%;
    overflow: hidden;
    box-sizing: border-box;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
    font-size: 24rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: rgb(51, 51, 51);
    margin-bottom: 20rpx;
}