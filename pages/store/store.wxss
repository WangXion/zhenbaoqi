page {
    background-color: rgba(243, 243, 243, 1);
}

.top_bg {
    width: 100%;
    height: 300rpx;
}

.top {
    width: 100%;
    height: 240rpx;
    position: relative;
    background-color: white;
}

.top_detail {
    width: 94%;
    height: 360rpx;
    position: absolute;
    top: -120rpx;
    left: 3%;
    background-color: white;
    border-radius: 10rpx;
}

.top_detail_store {
    width: 94%;
    height: 200rpx;
    margin: auto;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid rgb(235, 235, 235);
}

.top_detail_store_left {
    display: flex;
    align-items: center;
    justify-content: start;
    position: relative;
}

.medal {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 125rpx;
    left: 120rpx;
}

.top_detail_store_right {
    display: flex;
    align-items: center;
}

.guanzhu {
    width: 140rpx;
    height: 50rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 25rpx;
    right: 30rpx;
    top: 50rpx;
}

.top_store_msg {
    width: 94%;
    height: 150rpx;
    margin-top: 5rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    text-align: center;
    font-size: 32rpx;
}

.top_store_pingjia {
    width: 94%;
    height: 40rpx;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 26rpx;
    color: rgba(157, 157, 157, 1)
}

.top_store_pingjia_list {
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.top_store_pingjia_class {
    width: 80rpx;
    height: 30rpx;
    font-size: 25rpx;
    text-align: center;
    line-height: 30rpx;
    background: rgba(249, 231, 227, 1);
    color: red;
    border-radius: 15rpx;
}

.select {
    width: 100%;
    height: 250rpx;
    background-color: white;
}

.select_top {
    width: 94%;
    height: 80rpx;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid rgba(227, 227, 227, 1);

}

.select_list {
    width: 94%;
    height: 160rpx;
    margin: auto;
    display: flex;
    justify-content: start;
    flex-wrap: wrap;
}

.list {
    width: 30%;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 5rpx;
    margin-top: 20rpx;
    margin-right: 1%;

}

.goods_list {
    width: 100%;
    margin-top: 16rpx;
    padding-bottom: 200rpx;
}

.goods_list_tab {
    width: 100%;
    height: 100%;
}

.goodList {
    width: 96%;
    margin: auto;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.goods {
    width: 48%;
    height: 450rpx;
    border-radius: 15rpx;
    background-color: white;
    margin-top: 20rpx;
}

.good_img {
    width: 100%;
    height: 70%;
    border-radius: 15rpx 15rpx 0 0;
}

.good_detail {
    width: 100%;
    height: 30%;
    overflow: hidden;
}

.good_name {
    width: 94%;
    height: 44rpx;
    margin: auto;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 10rpx;

}

.bottom {
    width: 100%;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: white;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-top: 2px solid rgba(246, 246, 246, 1);
}

.bottom_right {
    width: 60%;
    height: 90rpx;

}

.bottom_btn {
    width: 100%;
    height: 100%;
    background-color: red;
    font-size: 32rpx;
    text-align: center;
    line-height: 90rpx;
    color: white;
    border-radius: 6rpx;
}