page {
    background-color: rgba(245, 245, 245, 1);
}



.card_list {
    margin-top: 10rpx;
}

.list {
    width: 100%;
    margin-bottom: 20rpx;

}

.list_top {
    width: 100%;
    height: 80rpx;
    background-color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;

}

.list_top_list {
    flex-shrink: 0;
    font-size: 28rpx;
    color: rgba(255, 37, 37, 1);
    margin-right: 30rpx;
}


.list_center {
    width: 100%;
    height: 320rpx;
    background-color: white;
    margin-top: 1px;

}

.list_center_top {
    width: 94%;
    height: 250rpx;
    margin: auto;
    display: flex;
    justify-self: start;
    align-items: center;
    border-bottom: 1px solid rgba(245, 245, 245, 1);
}

.good_img {
    width: 200rpx;
    height: 200rpx;

}

.good_text {
    flex: 1;
    margin-left: 30rpx;
}

.good_name {
    height: 150rpx;
}

.good_price {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.list_bottom {
    width: 100%;
    height: 100rpx;
    background-color: white;
    margin-top: 1px;
}

.list_bottom_btn {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.btn {
    width: 150rpx;
    height: 50rpx;
    border: 1px solid rgba(232, 232, 232, 1);

    border-radius: 25rpx;
    font-size: 27rpx;
    text-align: center;
    line-height: 50rpx;
    margin-right: 30rpx;
}

.kong {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;

}