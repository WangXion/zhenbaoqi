page {
    background-color: rgba(241, 241, 241, 1);
}

.state {
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: white;

}

.user {
    width: 100%;
    height: 200rpx;
    background-color: white;
    position: relative;
    margin-top: 10rpx;
}

.user_top {
    width: 100%;
    height: 85rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;

}

.set_site {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: inherit;
}

.user_top_left {
    display: flex;
    align-items: center;
    justify-content: start;
    margin-left: 20rpx;
    font-size: 30rpx;
}

.user_site {
    width: 90%;
    height: 100rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
}

.user_yb {
    width: 100%;
    height: 50rpx;
    margin-left: 20rpx;
    font-size: 28rpx;

}

.goods {
    width: 100%;
    margin-top: 10rpx;
    background-color: white;
}

.goods_top {
    width: 94%;
    height: 80rpx;
    margin: auto;
    font-size: 30rpx;
    border-bottom: 1px solid rgb(243, 243, 243);
    line-height: 80rpx;
    font-weight: bold;
}

.goods_list {
    width: 94%;
    margin: auto;
    background-color: white;
}

.list {
    width: 100%;
    height: 250rpx;
    display: flex;
    justify-content: start;
    align-items: center;
}

.good_img {
    width: 200rpx;
    height: 200rpx;
}

.good_text {
    flex: 1;
    margin-left: 30rpx;
}

.good_name {

    height: 160rpx;
    font-size: 30rpx;
    font-weight: bold;
}

.good_price {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
}

.texts,
.service {
    width: 100%;
    margin-top: 10rpx;
    background-color: white;
}

.texts_counte {
    width: 94%;
}

.texts_list {
    width: 94%;
    height: 85rpx;
    margin: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 25rpx;
}



.textss {
    width: 100%;
    margin-top: 10rpx;
    background-color: white;

}

.textss_top {
    width: 96%;
    height: 60rpx;
    margin: auto;
    line-height: 60rpx;
    font-weight: bold;
}

.service_top {
    width: 94%;
    height: 80rpx;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.service_top_medal {
    width: 120rpx;
    height: 34rpx;
    font-size: 23rpx;
    text-align: center;
    line-height: 30rpx;
    background-color: rgba(185, 53, 62, 1);
    color: white;
    border-radius: 15rpx 25rpx 0 15rpx;
}

.weui-textarea {
    width: 96%;
    height: 120rpx;
    margin: auto;
    margin-top: 20rpx;
    position: relative;
    z-index: 0

}

.bottom {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background:#fff;
    z-index: 1000000;
}

.bottom_pay {
    width: 300rpx;
    height: 80rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 80rpx;
    color: white;
    background-color: rgba(237, 35, 35, 1);
    border-radius: 6rpx;
    margin-right: 20rpx;

}

.btn {
    width: 150rpx;
    height: 66rpx;
    text-align: center;
    line-height: 66rpx;
    border: 1px solid black;
    border-radius: 33rpx;
    margin-right: 30rpx;
}

.pay {
    width: 100%;
    height: 100%;
    z-index: 1000000000;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.685);
    display: flex;
    align-items: flex-end;


}

.pay_select {
    width: 100%;
    height: 400rpx;
    background-color: white;
    position: relative;

}



.pay_select_top {
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 40rpx;
}

.pay_btn {
    position: absolute;
    width: 100%;
    height: 100rpx;
    bottom: 0rpx;
    left: 0;
    font-size: 30rpx;
    text-align: center;
    line-height: 100rpx;
    background-color: rgba(255, 37, 37, 1);
    color: white;
}

.pay_select_select {
    width: 94%;
    margin: auto;


}

.pay_list {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;

}

.list_title {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.pay_off {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
}

.discounts {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.685);
    display: flex;
    align-items: flex-end;
    z-index: 1000;
}

.discounts_center {
    width: 100%;
    height: 70%;
    background-color: rgb(248, 246, 249);
    overflow: hidden;
    padding-bottom: 50rpx;
    position: relative;
}

.discounts_list_off {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 20rpx;
    right: 20rpx
}

.discounts_top {
    width: 100%;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;

}

.discounts_list {
    width: 100%;
    height: 100%;
    overflow: auto;

}

.discounts_list_detail {
    background-color: white;
    width: 90%;
    height: 250rpx;
    margin: auto;
    margin-bottom: 20rpx;
    border-radius: 25rpx;
    color: rgb(152, 149, 152)
}

.discounts_list_detail_top {
    width: 100%;
    height: 170rpx;
    display: flex;
    align-items: center;
    justify-content: start;
}

.discounts_list_detail_bto {
    width: 94%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1px dashed rgb(250, 247, 250);
    margin: auto;
    font-size: 25rpx;
}

.discounts_list_detail_bto_btn {
    width: 100rpx;
    height: 44rpx;
    background-color: red;
    text-align: center;
    line-height: 44rpx;
    color: white;
    border-radius: 22rpx;
    margin-right: 10rpx;
}