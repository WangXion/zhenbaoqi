page {
    background-color: rgba(245, 245, 245, 1);
}


.drawer {
    width: 100%;
    height: 100%;
    position: relative;
}

.serve {
    width: 100%;
    height: 240rpx;
    margin-bottom: 20rpx;
}

.serve_list {
    width: 120rpx;
    height: 60rpx;
    background: rgba(240, 240, 240, 1);
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    float: left;
    margin: 20rpx;
}

.price {
    width: 100%;
    height: 300rpx;
    margin-top: 30rpx;
}

.weui-input {
    width: 150rpx;
    height: 80rpx;
    float: left;
    margin: 10rpx;
    background-color: rgba(240, 240, 240, 1);
    text-align: center;
    line-height: 80rpx;
    font-size: 26rpx;
}

.drawer_btn {
    position: absolute;
    right: 0;
    bottom: 20rpx;
    width: 100%;
    height: 90rpx;
    text-align: center;
    font-size: 28rpx;
}

.search_tab {
    width: 100%;
    height: 86rpx;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    top: 0;
    left: 0;
    border-top: 1px solid rgba(245, 245, 245, 1);
    border-bottom: 1px solid rgba(245, 245, 245, 1);
}

.shaixuan {
    width: 110rpx;
    height: 100%;
    font-size: 31rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-right: 30rpx;
    line-height: 86rpx;
    color: rgb(77, 76, 76);

}

.tab_selects {
    width: 100%;
    height: 80rpx;
    overflow: auto;
    background-color: white;
    position: fixed;
    /* top: 90rpx; */
     top: 0rpx;
}

.tabs {
    height: 60rpx;
    margin-top: 10rpx;
    display: flex;
    align-items: center;
    justify-content: start;

}

.tab_list {
    padding-left: 20rpx;
    padding-right: 20rpx;
    flex-shrink: 0;
    height: 42rpx;
    font-size: 26rpx;
    border-radius: 20rpx;
    margin-left: 40rpx;
    text-align: center;
    line-height: 42rpx;
    background-color: rgba(245, 245, 245, 1);
}

.srarch_status {
    width: 100%;
    height: 100%;

}

.kong {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;

}

.goodsList {
    width: 100%;
    height: 100%;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: start;
    flex-wrap: wrap;
}

.goods_list {
    width: 45%;
    height: 420rpx;
    background-color: white;
    border-radius: 20rpx;
    margin-top: 20rpx;
    margin-left: 3%;

}

.goods_list_img {
    width: 100%;
    height: 300rpx;
    border-radius: 20rpx 20rpx 0 0;
}

.goods_list_name {
    width: 94%;
    height: 50rpx;
    font-size: 26rpx;
    font-weight: bold;
    margin: auto;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

}

.goods_list_price {
    width: 94%;
    height: 50rpx;
    margin: auto;
    font-size: 30rpx;
    line-height: 50rpx;
    color: red;
    font-weight: bold;
}