page {
  width: 100%;
  height: 100%;
}

.video_container {
  width: 100%;
  height: 100%;
}

.pinglun {
  position: fixed;
  width: 100%;
  height: 800rpx;
  background-color: rgba(255, 255, 255, 0.92);
  bottom: 0;
  left: 0;
  z-index: 100000;
  overflow: auto;
  z-index: 1000000;
}

.pinglun_detail {
  width: 100%;
  height: 800rpx;
  position: relative;
}

.pinglun_top {
  width: 94%;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 3%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pinglun_list {
  width: 100%;
  height: 620rpx;
  margin: auto;
  overflow: auto;
}

.list_detail {
  width: 94%;
  height: 100rpx;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: start;
  font-size: 24rpx;
}

.pinglun_input {
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  background-color: rgba(220, 220, 220, 1);
  display: flex;
  align-items: center;
}
.textarea{
  width: 96%;
  height: 80rpx;
  margin: auto;
}