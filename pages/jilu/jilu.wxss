page {
    background-color: rgba(243, 243, 243, 1);
}

.lilu_list {
    width: 94%;
    height: 100%;
    margin: auto;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.list {
    width: 46%;
    height: 400rpx;
    background-color: white;
    border-radius: 15rpx;
    margin-top: 30rpx;
    position: relative;
}

.goods_img {
    width: 100%;
    height: 300rpx;
    border-radius: 15rpx 15rpx 0 0;
}

.goods_name {
    width: 100%;
    height: 40rpx;
    font-size: 24rpx;
    line-height: 40rpx;
    margin-left: 10rpx;
}

.goods_text {
    width: 100%;
    height: 50rpx;
    margin-left: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;

}

.goods_state {
    width: 76rpx;
    height: 40rpx;
    font-size: 22rpx;
    text-align: center;
    line-height: 40rpx;
    color: white;
    position: absolute;
    top: 30rpx;
    right: 0;
    border-radius: 20rpx 0 0 20rpx;
}
.kong{
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;
    
}