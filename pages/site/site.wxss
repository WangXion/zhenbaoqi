page {
    background-color: rgba(245, 245, 245, 1);
}

.sites {
    width: 100%;
    margin-top: 30rpx;

}


.list {
    width: 100%;
    height: 300rpx;
    margin-top: 20rpx;
    background-color: white;
}

.user {
    width: 94%;
    margin: auto;
    height: 210rpx;
}

.user_top {
    width: 100%;
    height: 60rpx;
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.user_site {
    width: 100%;
    height: 90rpx;
    font-size: 28rpx;
}

.user_yb {
    width: 100%;
    height: 60rpx;
    font-size: 28rpx;
    line-height: 60rpx;

}

.site_btn {
    width: 94%;
    height: 80rpx;
    margin: auto;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1px solid rgba(245, 245, 245, 1);
    color: rgba(113, 113, 113, 1);
}

.addSite {
    width: 90%;
    height: 80rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: red;
    color: white;
    position: fixed;
    left: 5%;
    bottom: 50rpx;
    border-radius: 8rpx;
}
.site_btn_right{
    display: flex;
    align-items: center;
    justify-content: space-between;
}